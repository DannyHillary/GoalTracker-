@model GoalTracker.Models.ProgressTrackingGoal

<h2>Delete Progress Goal</h2>

<p>Are you sure you want to delete the following goal?</p>

<div class="form-group">
    <label>Title</label>
    <p>@Model.Title</p>
</div>

<div class="form-group">
    <label>Description</label>
    <p>@Model.Description</p>
</div>

<div class="form-group">
    <label>Target Amount</label>
    <p>@Model.TargetAmount</p>
</div>

<div class="form-group">
    <label>Current Amount</label>
    <p>@Model.CurrentAmount</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete Goal</button>
    <a href="@Url.Action("Index", "ProgressGoal")" class="btn btn-secondary">Cancel</a>
</form>

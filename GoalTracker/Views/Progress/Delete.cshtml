@model GoalTracker.Models.ProgressTrackingGoal

@{
    ViewData["Title"] = "Delete Progress Goal";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Are you sure you want to delete this goal?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.Title</dd>

        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Start Date</dt>
        <dd>@Model.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt>End Date</dt>
        <dd>@Model.EndDate?.ToString("yyyy-MM-dd")</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Current Amount</dt>
        <dd>@Model.CurrentAmount</dd>

        <dt>Target Amount</dt>
        <dd>@Model.TargetAmount</dd>

        <dt>Goal Type</dt>
        <dd>@Model.GoalType</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "ProgressGoal")" class="btn btn-secondary">Cancel</a>
    </form>
</div>


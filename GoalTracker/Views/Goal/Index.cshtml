@model IEnumerable<BaseGoal>

<h2>Goals</h2>

<a href="@Url.Action("Create", "Goal")" class="btn btn-primary">Create New Goal</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Goal Type</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goal in Model)
        {
            <tr>
                <td>@goal.Title</td>
                <td>@goal.Description</td>
                <td>@goal.StartDate.ToShortDateString()</td>
                <td>@goal.EndDate?.ToShortDateString()</td>
                <td>@goal.GoalType</td>
                <td>@goal.Status</td>
                <td>
                    <a href="@Url.Action("Edit", "Goal", new { id = goal.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Goal", new { id = goal.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", "Goal", new { id = goal.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

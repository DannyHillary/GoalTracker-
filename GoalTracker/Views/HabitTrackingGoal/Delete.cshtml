@model HabitTrackingGoal

<h2>Delete Habit Tracking Goal</h2>

<p>Are you sure you want to delete this habit tracking goal?</p>

<div class="form-group">
    <label>Title</label>
    <p>@Model.Title</p>
</div>

<div class="form-group">
    <label>Description</label>
    <p>@Model.Description</p>
</div>

<div class="form-group">
    <label>Frequency</label>
    <p>@Model.Frequency</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "HabitTrackingGoal")" class="btn btn-secondary">Cancel</a>
</form>

